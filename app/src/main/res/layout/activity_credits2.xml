<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreditsActivity2">

    <ScrollView
        android:id="@+id/scrollView_credits"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="text"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Credits\n"
                android:textStyle="bold"
                android:textSize="40sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_credits1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thiết kế đồ họa"
                android:textStyle="bold"
                android:textSize="30sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_credits2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lê Đình Dương\nTrần Ngọc Phú\nĐào Mạnh Toàn\nTrần Văn Kiên"
                android:textSize="30sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_credits3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nThiết kế tính năng"
                android:textStyle="bold"
                android:textSize="30sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_credits4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lê Đình Dương\nTrần Ngọc Phú\nĐào Mạnh Toàn\nTrần Văn Kiên"
                android:textSize="30sp"
                android:gravity="center"/>
        </LinearLayout>
        
    </ScrollView>

</RelativeLayout>